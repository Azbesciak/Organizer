<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/summaryLabel"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    android:focusableInTouchMode="true"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <TextView
            android:id="@+id/selectedDayKcalLimitText"
            android:text="Limit na dzieÅ„ :"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText android:id="@+id/selectedDayKcalLimitValue"
            android:hint="kcal"
            android:selectAllOnFocus="true"
            android:layout_width="70dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"/>

        <TextView
            android:id="@+id/actualKcalLabel"
            android:text="Obecnie :"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" />


        <EditText
            android:id="@+id/actualKcalValue"
            android:hint="kcal"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="70dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />

        <ImageView android:id="@+id/labelImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_done" />

    </LinearLayout>
</android.support.v7.widget.CardView>